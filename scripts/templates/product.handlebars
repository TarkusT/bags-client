{{#each products}}
	{{#isLengthOf images ">" 0}}
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-2">
			<div class="card product-card">
				<div class="card-header">
					<div class="card-body">
						<div id="product-{{id}}" class="carousel slide" data-ride="carousel" data-interval="false">
							<!-- Indicators -->
							<ol class="carousel-indicators">
								{{#each images}}
									<li data-target="#product-{{id}}" data-slide-to="{{@index}}" class="{{#ifCond @index '==' 0}}active{{/ifCond}}"></li>
								{{/each}}
							</ol>

							<!-- Wrapper for slides -->
							<div class="carousel-inner" role="listbox">
								{{#each images}}
									<a href="#product_id={{../id}}" target="_blank" onclick="TriggerProductPopup('{{../id}}');return false;" class="item {{#ifCond @index '==' 0}}active{{/ifCond}}">
										<img src="{{medium}}" alt="">
									</a>
								{{/each}}
							</div>

							<!-- Controls -->
							<a class="left carousel-control" href="#product-{{id}}" role="button" data-slide="prev">
								<span class="zmdi zmdi-chevron-left" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="right carousel-control" href="#product-{{id}}" role="button" data-slide="next">
								<span class="zmdi zmdi-chevron-right" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
				</div>
				<div class="card-body product-details">
					<div class="price">${{price}}</div>
					<div class="tags-container">
						{{#if tags}}
							{{#each tags}}
								{{#ifCond @index "<" 5}}
									<button index="{{@index}}" tag-id="{{id}}" type="button" class="btn {{colorTag category.id}} tag">#{{category.name}}: {{name}}</button>
								{{/ifCond}}
							{{/each}}
							{{#isLengthOf tags ">" 5}}
								<div class="dropdown dropup inline-block">
									<a href="#" class="dropdown-toggle btn btn-sm tag-more btn-default mt10" data-toggle="dropdown" aria-expanded="true">+{{countMoreLength tags}}</a>
									<ul class="dropdown-menu tags-popup">
										{{#each tags}}
											{{#ifCond @index ">=" 5}}
												<li>
													<button tag-id="{{id}}" type="button" class="btn {{colorTag category.id}} tag">#{{category.name}}: {{name}}</button>
												</li>
											{{/ifCond}}
										{{/each}}
									</ul>
								</div>
							{{/isLengthOf}}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	{{/isLengthOf}}
{{/each}}